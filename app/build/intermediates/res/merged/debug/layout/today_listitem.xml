<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pill_layout"
    style="@style/MedicineList"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pill_name3"
        style="@style/ListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/pillImage3"
        android:clickable="true"
        android:onClick="onClick"
        android:padding="2dp"
        android:text="pillName"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/time_amount"
        style="@style/ListSecondaryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:clickable="true"
        android:onClick="onClick"
        android:padding="2dp"
        android:text="time: amount"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/pillImage3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/material_blue_700" />

    <ImageView
        android:id="@+id/tick"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/pillImage3"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:background="@android:color/transparent"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/pillNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/pill_name3"
        android:layout_alignStart="@+id/pill_name3"
        android:layout_below="@+id/pill_name3"
        android:layout_marginTop="4dp"
        android:text="note" />


</RelativeLayout>